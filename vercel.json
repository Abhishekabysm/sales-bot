{
    "version": 2,
    "buildCommand": "cd frontend && npm ci && npm run build",
    "outputDirectory": "frontend/build",
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}